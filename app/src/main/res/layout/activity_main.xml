<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:columnCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="7">

        <TextView
            android:id="@+id/t1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="T1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t1ValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="0"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="T2"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t2ValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="T3"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t3ValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="fill"
            android:paddingLeft="10sp"
            android:tag="2"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="T4"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t4ValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="3"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/pressureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="Pressure"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/pressureValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="4"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/humidityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="Humidity"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="5"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/humidityValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="5"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="5"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/husenstTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="HuSensT"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="6"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/husenstValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="6"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="6"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

    <EditText
        android:id="@+id/baudRateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:width="100dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="BaudRate"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/dataSizeInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/devicesSpinner" />

    <EditText
        android:id="@+id/dataSizeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:width="30dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="D"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/parityInput"
        app:layout_constraintStart_toEndOf="@+id/baudRateInput"
        app:layout_constraintTop_toBottomOf="@+id/devicesSpinner" />

    <EditText
        android:id="@+id/parityInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:width="30dp"
        android:ems="10"
        android:gravity="clip_horizontal|center_horizontal"
        android:hint="P"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/stopBitInput"
        app:layout_constraintStart_toEndOf="@+id/dataSizeInput"
        app:layout_constraintTop_toBottomOf="@+id/devicesSpinner" />

    <EditText
        android:id="@+id/stopBitInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:width="30dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="SB"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/portInput"
        app:layout_constraintStart_toEndOf="@+id/parityInput"
        app:layout_constraintTop_toBottomOf="@+id/devicesSpinner" />

    <Button
        android:id="@+id/setConnectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="tryConnection"
        android:text="connect"
        app:backgroundTint="#1B2F9F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/portInput"
        app:layout_constraintTop_toBottomOf="@+id/devicesSpinner" />

    <Spinner
        android:id="@+id/devicesSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:dropDownWidth="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="startTimer"
        android:text="GO!"
        app:backgroundTint="#1B2F9F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/portInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:width="50dp"
        android:ems="10"
        android:hint="Port"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/setConnectionButton"
        app:layout_constraintStart_toEndOf="@+id/stopBitInput"
        app:layout_constraintTop_toBottomOf="@+id/devicesSpinner" />

    <TextView
        android:id="@+id/consoleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baudRateInput" />

    <Button
        android:id="@+id/commandButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="sendCommand"
        android:text="Send"
        app:backgroundTint="#1B2F9F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/commandLineTextView"
        app:layout_constraintTop_toBottomOf="@+id/consoleTextView" />

    <EditText
        android:id="@+id/commandLineTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/commandButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consoleTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>